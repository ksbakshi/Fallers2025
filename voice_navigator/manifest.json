{
  "manifest_version": 3,
  "name": "Voice Navigator",
  "version": "0.0.3",
  "description": "Voice-controlled browser with search, same-tab nav, and continuous listening.",
  "permissions": [
    "scripting",
    "tabs",
    "activeTab",
    "webNavigation",
    "sidePanel"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://www.youtube-nocookie.com/*"
  ],
  "background": { "service_worker": "service_worker.js" },
  "commands": {
    "toggle-mic": {
      "suggested_key": { "default": "Alt+Shift+V" },
      "description": "Toggle overlay"
    },
    "open-music-panel": {
      "suggested_key": { "default": "Alt+Shift+M" },
      "description": "Open music side panel"
    }
  },
  "action": { "default_title": "Voice Navigator" },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; frame-src 'self' https://www.youtube.com https://www.youtube-nocookie.com;"
  }
}
